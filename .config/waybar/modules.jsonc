{
  // Workspaces
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": false,
    "show-special": true,
    "sort-by": "id",
    "format": "{name}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "on-scroll-up": "hyprctl dispatch workspace m+1",
    "on-scroll-down": "hyprctl dispatch workspace m-1"
  },
  // Taskbar
  "wlr/taskbar": {
    "format": "{icon} {name}",
    "icon-size": 22,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition",
      "terminal64.exe": "OANDA TMS MT5 Terminal"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      ".*MetaTrader.*": " MetaTrader 5"
    }
  },
  // Cliphist
  "custom/cliphist": {
    "format": "ÔÉ™",
    "on-click": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh",
    "on-click-right": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh d",
    "on-click-middle": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh w",
    "tooltip": false
  },
  // Power Menu
  "custom/exit": {
    "format": "ÔÄë",
    "on-click": "wlogout",
    "tooltip": false,
    "escape": true
  },
  "battery": {
    "bat": "BAT0",
    "interval": 10,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-icons": [
      "Û∞ÇÉ",
      "Û∞Åª",
      "Û∞ÅΩ",
      "Û∞Åø",
      "Û∞ÇÅ",
      "Û∞Åπ"
    ],
    "max-length": 25
  },
  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10,
    "show-passive-items": true
  },
  // Clock
  "clock": {
    "format": "ÔÄó {:%H:%M}",
    "format-alt": "{:%A, %d de %B %Y - %R}",
    "tooltip-format": "<tt><span size='11pt'>{calendar}</span></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "group/pulseaudio": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio",
      "pulseaudio/slider"
    ],
    "drawer": {
      "transition-duration": 300,
      "children-class": "drawer-child",
      "transition-left-to-right": false
    }
  },
  // Pulseaudio
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}%  {icon}Ôäî",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî",
    "format-muted": "Ôö© ",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄ® ",
        "ÔÄ® "
      ]
    },
    "on-click": "pavucontrol",
    "on-click-middle": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },
  "mpris": {
    "format": "{player} {player_icon} {position}/{length}",
    "format-paused": "{player} {status_icon} {position}/{length}",
    "player-icons": {
      "default": " Û∞ùö ",
      "mpv": " Û∞ùö ",
      "chromium": " Û∞ùö "
    },
    "status-icons": {
      "paused": " Û∞ùõ "
    },
    "dynamic-len": 60
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='#AD8AE5'>ÔÇ¢</span>",
      "none": "ÔÇ¢",
      "dnd-notification": "<span foreground='#AD8AE5'>Ôá∑</span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "<span foreground='#AD8AE5'>ÔÇ¢</span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "<span foreground='#AD8AE5'>Ôá∑</span>",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": "{icon}",
    "format-icons": {
      "locked": "üóö",
      "unlocked": "üóö"
    }
  },
  "custom/switcher": {
    "format": "Ôêé",
    "tooltip": false,
    "min-length": 3,
    "on-click": "pkill rofi || rofi -i -show drun",
    "on-click-right": "pkill rofi || rofi -i -show window",
    "on-click-middle": "~/.config/hypr/scripts/hyprland-empty-workspace.sh"
  },
  "custom/workspaceplus": {
    "format": "ÔÅß",
    "tooltip": false,
    "min-length": 2,
    "on-click": "~/.config/hypr/scripts/hyprland-empty-workspace.sh"
  },
  "custom/pacman": {
    // "format": "{icon}{}",
    "format": "{icon} ", //Fix temporal https://github.com/savely-krasovsky/waybar-updates/issues/31
    "return-type": "json",
    "format-icons": {
      "pending-updates": "Û∞≠Ω",
      "updated": "Û±ãå"
    },
    "exec-if": "which waybar-updates",
    "exec": "waybar-updates -t '{total} packages pending \n\n{}'",
    "on-click": "kitty zsh -i -c 'yay -Syu --combinedupgrade --noconfirm; echo \"Presiona Enter para cerrar...\"; read -n 1 '"
  }
  //  "custom/moveworkspaceleft": {
  //    "format": "ÔÅ†",
  //    "tooltip": false,
  //    "min-length": 2,
  //    "on-click": "~/.config/hypr/scripts/hyprland-move-workspace.sh l"
  //  },
  //  "custom/moveworkspaceright": {
  //    "format": "ÔÅ°",
  //    "tooltip": false,
  //    "min-length": 2,
  //    "on-click": "~/.config/hypr/scripts/hyprland-move-workspace.sh r"
  //  }
}
